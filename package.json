{
    "name": "template",
    "version": "1.0.0",
    "description": "A template for webpack + vue apps.",
    "main": "main.js",
    "scripts": {
        "build": "webpack --mode production --watch",
        "dev": "webpack --mode development --watch",
        "build-css": "node-sass --include-path client/stylesheets client/stylesheets/styles.scss assets/css/styles.css",
        "watch-css": "nodemon -e scss -x \"npm run build-css\""
    },
    "keywords": [],
    "author": "Francesco Compagnoni",
    "license": "ISC",
    "devDependencies": {
        "cross-env": "^5.2.0",
        "css-loader": "^1.0.1",
        "node-sass": "^4.10.0",
        "nodemon": "latest",
        "sass-loader": "^7.1.0",
        "vue": "^2.5.17",
        "vue-loader": "^15.4.2",
        "vue-style-loader": "^4.1.2",
        "vue-template-compiler": "^2.5.17",
        "webpack": "^4.23.1",
        "webpack-cli": "^3.1.2"
    },
    "dependencies": {
        "hapi": "latest",
        "inert": "latest",
        "vision": "latest",
        "handlebars": "latest"
    }
}
